@model IEnumerable<Project>

<h2>Projects</h2>

<div style="display: block">
    <a href="/Project/InsertProject/">Create a New Project</a>
</div>

<table class="table">
    <tr>
        <th>ProjectID</th>
        <th>Name</th>
        <th>Cost</th>
        <th>PortfolioID</th>
        <th>Active</th>
        <th>Level</th>
    </tr>

    @foreach (var project in @Model)
    {
        <tr>
            <td><a href=/Project/ViewProject/@project.ProjectID>@project.ProjectID</a></td>
            <td>@project.Name</td>
            <td>@project.Cost</td>
            <td>@project.PortfolioID</td>
            <td>@project.Active</td>
            <td>@project.Level</td>
        </tr>
    }

</table>