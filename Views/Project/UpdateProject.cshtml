@model Project

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateProjectToDatabase", "Project", "Post"))
{
    <label asp-for="ProjectID" class="control-label">ProjectID</label>
    <input type="text" name="ProjectID" class="form-control" value="@Model.ProjectID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Cost" class="control-label">Cost</label>
    <input type="number" name="Cost" class="form-control" value="@Model.Cost" />

    <input type="submit" value="Update Project" class="btn btn-primary" />
}